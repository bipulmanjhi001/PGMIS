<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
        <ImageView
            android:id="@+id/newsfeedcamera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/camera_icon" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="Camera"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/newsfeedcamera"
            app:layout_constraintStart_toEndOf="@+id/newsfeedcamera"
            app:layout_constraintTop_toTopOf="@+id/newsfeedcamera" />


    <ImageView
        android:id="@+id/newsfeedgallery"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newsfeedcamera"
        app:srcCompat="@drawable/gallery_icon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="18dp"
        android:text="Gallery"
        app:layout_constraintBottom_toBottomOf="@+id/newsfeedgallery"
        app:layout_constraintStart_toEndOf="@+id/newsfeedgallery"
        app:layout_constraintTop_toTopOf="@+id/newsfeedgallery" />

</androidx.constraintlayout.widget.ConstraintLayout>
